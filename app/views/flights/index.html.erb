<h1>Flights Here</h1>

<%= form_for(:flight, url: searches_path, method: :get) do |f|%>
  <%= fields_for :airport do |builder|%>
    <div class="form-group">
      <%= builder.label :origin, "From: " %>
      <%= builder.select(:origin, @airports)%>
    </div>
    <div class="form-group">
      <%= builder.label :destination, "To: " %>
      <%= builder.select(:destination, @airports)%>
    </div>
  <% end %>
  <div class="form-group">
    <%= label_tag :passenger_count%>
    <%= select_tag :passenger_count, options_for_select([1,2,3,4,5])%>
  </div>
  <div class="form-group">
    <%= label_tag :date %>
    <%= select_tag :date, options_for_select(@dates)%>
  </div>
  <%= f.submit "Search Flights", class:"btn btn-primary"%>
<% end %>